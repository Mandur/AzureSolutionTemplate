{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "dashboardSolutionPrefix": {
            "type": "string",
            "metadata": {
                "description": "Prefix used in resource names. Should be unique enough since this ends up being used also in domain names."
            }
        },
        "gitUsername": {
            "type": "string",
            "metadata": {
                "description": "the current git username"
            }
        },
        "gitBranch": {
            "type": "string",
            "metadata": {
                "description": "the current git branch"
            }
        }
    },
    "variables": {
        "dashboardAppName": "[concat(parameters('dashboardSolutionPrefix'), 'dashboardfunction')]",
        "gitUsername": "[parameters('gitUsername')]",
        "gitRepoUrl": "[concat('https://github.com/',variables('gitUsername'),'/AzureSolutionTemplate.git')]",
        "gitBranch": "[parameters('gitBranch')]",
        "hostingPlanName": "[concat(parameters('dashboardSolutionPrefix'), 'plan')]",
        "storageAccountName": "[concat(parameters('dashboardSolutionPrefix'), 'storage')]",
        "storageAccountId": "[concat(resourceGroup().id, '/providers/', 'Microsoft.Storage/storageAccounts/', variables('storageAccountName'))]",
        "serviceBusNamespaceName": "[concat(parameters('dashboardSolutionPrefix'),'servicebusnamespace')]",
        "serviceBusTopicName": "[concat(parameters('dashboardSolutionPrefix'),'dashboardservicebustopicname')]",
        "serviceBusReadRuleName": "[concat(parameters('dashboardSolutionPrefix'),'dashboardservicebusreadrule')]",
        "serviceBusWriteRuleName": "[concat(parameters('dashboardSolutionPrefix'),'dashboardservicebuswriterule')]",
        "serviceBusSubscription": "[concat(parameters('dashboardSolutionPrefix'),'dashboardservicebussubscription')]"
    },
    "resources": [
        {
            "apiVersion": "2016-08-01",
            "type": "Microsoft.Web/sites",
            "name": "[variables('dashboardAppName')]",
            "location": "[resourceGroup().location]",
            "kind": "functionapp",
            "dependsOn": [],
            "resources": [
                {
                    "apiVersion": "2016-08-01",
                    "name": "web",
                    "type": "sourcecontrols",
                    "dependsOn": [
                        "[resourceId('Microsoft.Web/sites', variables('dashboardAppName'))]"
                    ],
                    "properties": {
                        "repoUrl": "[variables('gitRepoUrl')]",
                        "branch": "[variables('gitBranch')]",
                        "IsManualIntegration": true
                    }
                }
            ],
            "properties": {
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('hostingPlanName'))]",
                "siteConfig": {
                    "appSettings": [
                        {
                            "name": "AzureWebJobsDashboard",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('storageAccountName'), ';AccountKey=', listKeys(variables('storageAccountId'),'2015-05-01-preview').key1)]"
                        },
                        {
                            "name": "AzureWebJobsStorage",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('storageAccountName'), ';AccountKey=', listKeys(variables('storageAccountId'),'2015-05-01-preview').key1)]"
                        },
                        {
                            "name": "FUNCTIONS_EXTENSION_VERSION",
                            "value": "beta"
                        },
                        {
                            "name": "PROJECT",
                            "value": "src/TopicPropertyMiddleware/TopicPropertyMiddleware.csproj"
                        },
                        {
                            "name": "MESSAGE_PROPERTIES",
                            "value": "deviceuid"
                        },
                        {
                            "name": "SERVICE_BUS",
                            "value": "[listKeys(resourceId('Microsoft.ServiceBus/namespaces/topics/authorizationRules',variables('serviceBusNamespaceName'),variables('serviceBusTopicName'),variables('serviceBusWriteRuleName')),'2017-04-01').primaryConnectionString]"
                        },
                        {
                            "name": "SERVICE_BUS_TOPIC",
                            "value": "[variables('serviceBusTopicName')]"
                        }
                    ]
                }
            }
        }
    ]
}